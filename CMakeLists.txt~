cmake_minimum_required(VERSION 2.8.3)
project(ros_tutorials_topic)

find_package(catkin REQUIRED COMPONENTS message_generation std_msgs roscpp actionlib_msgs)

add_message_files(FILES MsgTutorial.msg robot.msg)
#add_message_files(FILES robot.msg)
generate_messages(DEPENDENCIES std_msgs)

catkin_package(
  LIBRARIES ros_tutorials_topic
  CATKIN_DEPENDS std_msgs roscpp
)

include_directories(
	include
	${catkin_INCLUDE_DIRS})

ADD_LIBRARY(dart_mx8m_gpio STATIC lib/gpio_ctrl.c lib/clcd_ctrl.c)
ADD_LIBRARY(dart_mx8m_clcd STATIC lib/clcd_ctrl.c)

