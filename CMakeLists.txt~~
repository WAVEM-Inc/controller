cmake_minimum_required(VERSION 2.8.3)
project(ros_tutorials_topic)

find_package(catkin REQUIRED COMPONENTS message_generation std_msgs roscpp)

add_message_files(FILES MsgTutorial.msg)
generate_messages(DEPENDENCIES std_msgs)

catkin_package(
  LIBRARIES ros_tutorials_topic
  CATKIN_DEPENDS std_msgs roscpp
)

include_directories(${catkin_INCLUDE_DIRS})

ADD_LIBRARY(dart_mx8m_gpio STATIC lib/gpio_ctrl.c)

add_executable(topic_subscriber src/topic_subscriber.cpp lib/gpio_ctrl.cpp)
add_dependencies(topic_subscriber ${${PROJECT_NAME}_EXPORTED_TARGETS} ${catkin_EXPORTED_TARGETS})
target_link_libraries(topic_subscriber ${catkin_LIBRARIES})

add_executable(tank_subscriber src/tank_subscriber.cpp lib/gpio_ctrl.cpp)
add_dependencies(tank_subscriber ${${PROJECT_NAME}_EXPORTED_TARGETS} ${catkin_EXPORTED_TARGETS})
target_link_libraries(tank_subscriber ${catkin_LIBRARIES})

add_executable(control_publisher src/control_publisher.cpp)
add_dependencies(control_publisher ${${PROJECT_NAME}_EXPORTED_TARGETS} ${catkin_EXPORTED_TARGETS})
target_link_libraries(control_publisher ${catkin_LIBRARIES})

add_executable(control_subscriber src/control_subscriber.cpp lib/gpio_ctrl.cpp)
add_dependencies(control_subscriber ${${PROJECT_NAME}_EXPORTED_TARGETS} ${catkin_EXPORTED_TARGETS})
target_link_libraries(control_subscriber ${catkin_LIBRARIES})
